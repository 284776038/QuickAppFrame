<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/background</item>
        <!--标题栏风格-->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!--菜单风格-->
        <item name="android:actionMenuTextColor">@color/green_text</item>
        <item name="actionMenuTextColor">@color/green_text</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenu</item>
        <item name="actionMenuTextAppearance">@style/ActionBarMenu</item>
    </style>

    <style name="ShareTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <!-- ActionBar Tab标签 文本样式 -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textSize">10sp</item>
    </style>

    <!--标题栏居中文字风格-->
    <style name="TitleTextStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/title_primary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <!--带logo大图的文字风格-->
    <style name="TextLarge" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="TextNormal">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>


    <!--登录、注册、忘记密码和修改密码-->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/title_primary</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--<style name="CustomCirclePageIndicator">
        <item name="pageColor">#bababa</item>
        <item name="strokeColor">#bababa</item>
        <item name="centered">true</item>
    </style>

    <style name="CustomLargeCirclePageIndicator">
        <item name="pageColor">#ccffffff</item>
        <item name="strokeColor">#ccffffff</item>
        <item name="centered">true</item>
    </style>-->

    <style name="ActionBarMenu" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textColor">@color/green_text</item>
        <item name="android:textSize">@dimen/user_center_text_17_sp</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Holo.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!--标题  -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!-- 进入和退出的动画 -->
        <!--<item name="android:windowAnimationStyle">@style/MyDialogAnimation</item>-->

        <!-- 点外边可以消失  -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="popupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/operate_controler_enter_open</item>
        <item name="android:windowExitAnimation">@anim/operate_controler_exit_close</item>
    </style>

</resources>
