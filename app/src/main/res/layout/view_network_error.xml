<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingTop="110dp">
    
    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="@dimen/user_center_90_dp"
        android:layout_height="@dimen/user_center_90_dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo"/>

    <TextView
        android:id="@+id/mess_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/user_center_10_dp"
        android:text="@string/network_error"
        android:textColor="@color/gray"
        android:textSize="@dimen/user_center_text_14_sp"
        android:layout_below="@+id/logo_img"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:background="@drawable/btn_network_error"
        android:textColor="#86ada0"
        android:text="@string/network_error_refresh"
        android:textSize="@dimen/user_center_text_12_sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mess_txt"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>